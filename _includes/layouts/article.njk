---
layout: layouts/base.njk
section: article
---

<article>
  <header>
    <h1>{{ title }}</h1>
    <time datetime="{{ date | machineDate }}">{{ date | readableDate }}</time>
  </header>

  {{ layoutContent | safe }}

  {% if tags %}
    <p>
    {% for tag in tags %}
      {%- if tag != "article" -%}
        {% set tagUrl %}/tags/{{ tag }}/{% endset %}
        <a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
      {%- endif -%}
    {% endfor %}
    </p>
  {% endif %}
</article>

<nav>
  <a href="{{ '/articles/' | url }}">&larr; Articles index</a>
</nav>
