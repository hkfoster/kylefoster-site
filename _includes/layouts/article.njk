---
layout: layouts/base.njk
section: article
---

<article>
  <h1>{{ title }}</h1>
  {{ layoutContent | safe }}
  {% if tags %}
    <p>
    {% for tag in tags %}
      {%- if tag != "article" -%}
        {% set tagUrl %}/tags/{{ tag }}/{% endset %}
        <a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
      {%- endif -%}
    {% endfor %}
    </p>
  {% endif %}
  <small>Originally published on <time datetime="{{ date | machineDate }}">{{ date | readableDate }}</time></small>
</article>

<nav>
  <a href="{{ '/articles/' | url }}">&larr; Articles index</a>
</nav>
